<%= @user.name %>, <%= @user.email %>
<div class="clear">
<div class="span8 mrtop50">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <% @user.microposts.each do |micropost| %>
          <%= render micropost  %>
        <% end %>

    <% end %>
  </div>