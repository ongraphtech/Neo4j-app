<%= @user.name %>, <%= @user.email %>
<div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <% @user.microposts.to_a.each do |micropost| %>
          <%= render micropost %>
        <% end %>

    <% end %>
  </div>